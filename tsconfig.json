{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "build",
		"rootDir": "src",
		"typeRoots" : ["./node_modules/@types"],
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude" : [
		"src/**/*.spec.ts"
	]
}